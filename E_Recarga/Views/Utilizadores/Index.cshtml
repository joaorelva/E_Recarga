@model IEnumerable<E_Recarga.ViewModels.UsersWithRoles>

@{
    ViewBag.Title = "Index";
}

<h2>Utilizadores</h2>
    
<div>
    <table class="table table-hover table-responsive table-striped table-bordered">
        <th>Utilizadores Registados</th>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Saldo</td>
                <td>@Html.ActionLink(@user.UserName,"Details","Utilizadores",new {username = @user.UserName},null)</td>
            </tr>
        }
    </table>
</div>